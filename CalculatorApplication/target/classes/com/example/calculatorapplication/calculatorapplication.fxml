<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane maxHeight="200" maxWidth="600" minHeight="200"
            minWidth="600" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.calculatorapplication.CalculatorController">
    <bottom>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0"
              spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false"
                        onAction="#onAddButtonClick" text="Add" />
                <Button mnemonicParsing="false"
                        onAction="#onSubtractButtonClick" text="Subtract" />
                <Button mnemonicParsing="false"
                        onAction="#onMultiplyButtonClick" text="Multiply" />
                <Button mnemonicParsing="false"
                        onAction="#onDivideButtonClick" text="Divide" />
            </children>
        </HBox>
    </bottom>
    <center>
        <HBox alignment="CENTER" prefHeight="232.0" prefWidth="572.0"
              spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Number 1" />
                <TextField fx:id="firstNumber" prefColumnCount="2"
                           prefHeight="51.0" prefWidth="74.0" />
                <Label text="Number 2" />
                <TextField fx:id="secondNumber" prefColumnCount="2"
                           prefHeight="51.0" prefWidth="70.0" />
                <Label text="Result" />
                <TextField fx:id="result" prefColumnCount="2" prefHeight="51.0" prefWidth="70.0" />
            </children>
        </HBox>
    </center>
    <stylesheets>
        <URL value="@formstyle.css" />
    </stylesheets>
</BorderPane>
